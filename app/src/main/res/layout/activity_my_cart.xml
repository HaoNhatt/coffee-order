<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCartActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="20dp">

    <ImageButton
        android:id="@+id/back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_icon"
        style="?android:borderlessButtonStyle"
        android:layout_alignParentStart="true"
        android:onClick="goBack"
        android:contentDescription="Back to Home Icon"/>

    <TextView
        android:id="@+id/text_my_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Cart"
        android:fontFamily="@font/poppins_medium"
        android:textSize="20sp"
        android:layout_below="@id/back_icon"
        android:layout_marginTop="20dp"
        android:layout_marginStart="33dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_my_cart">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30sp"
            android:layout_marginStart="33sp"
            android:layout_marginEnd="40sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/drink_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:src="@drawable/americano" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="110sp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/drink_1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Americano"
                        android:textSize="14sp"
                        android:textColor="@color/faded_blue"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/drink_1_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Single | iced | medium | full ice"
                        android:textSize="12sp"
                        android:textColor="@color/drink_description"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/drink_1_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X 1"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/price_drink_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="$3.00"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/drink_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:src="@drawable/cappuccino" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="110sp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/drink_2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cappuccino"
                        android:textSize="14sp"
                        android:textColor="@color/faded_blue"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/drink_2_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Single | iced | medium | full ice"
                        android:textSize="12sp"
                        android:textColor="@color/drink_description"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/drink_2_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X 1"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/price_drink_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="$3.00"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/drink_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:src="@drawable/flat_white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="110sp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/drink_3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flat White"
                        android:textSize="14sp"
                        android:textColor="@color/faded_blue"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/drink_3_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Single | iced | medium | full ice"
                        android:textSize="12sp"
                        android:textColor="@color/drink_description"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/drink_3_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X 1"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/price_drink_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="$3.00"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>



        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/action_menu"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="20sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_medium"
                android:text="Total amount"
                android:textColor="@color/faded_white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_medium"
                android:text="$9.00"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/action_checkout"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/layout_border_3"
            android:onClick="goToOrderSuccess"
            android:paddingStart="30sp"
            android:paddingTop="15dp"
            android:paddingEnd="30sp"
            android:paddingBottom="15sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/checkout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="35dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Checkout"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>