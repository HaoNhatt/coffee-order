<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            style="?android:borderlessButtonStyle"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:onClick="goToHomePage"
            android:layout_marginTop="0dp"
            android:contentDescription="Back to Home Icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Profile"
            android:textSize="16sp"
            android:textColor="@color/faded_blue"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/poppins_medium"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/profile_header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="33sp"
            android:layout_marginEnd="33sp"
            android:layout_marginTop="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/small_profile"
                    android:layout_margin="11sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full name"
                        android:textColor="@color/faded_white"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        android:labelFor="@id/user_name"/>

                    <EditText
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:maxWidth="220sp"
                        android:layout_height="48sp"
                        android:layout_marginTop="-12sp"
                        android:text="@string/user_full_name"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:background="@null"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:autofillHints="name"/>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/edit"
                style="?android:borderlessButtonStyle"
                android:onClick="focusEditText"
                android:contentDescription="Edit Name icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="33sp"
            android:layout_marginEnd="33sp"
            android:layout_marginTop="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"
                    android:layout_margin="11sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textColor="@color/faded_white"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        android:labelFor="@id/user_phone"/>

                    <EditText
                        android:id="@+id/user_phone"
                        android:layout_width="wrap_content"
                        android:maxWidth="220sp"
                        android:layout_height="48sp"
                        android:layout_marginTop="-12sp"
                        android:text="@string/phone_number"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:background="@null"
                        android:lines="1"
                        android:inputType="phone|number"
                        android:autofillHints="phone"/>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/edit_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/edit"
                style="?android:borderlessButtonStyle"
                android:onClick="focusEditText"
                android:contentDescription="Edit Phone icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="33sp"
            android:layout_marginEnd="33sp"
            android:layout_marginTop="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email"
                    android:layout_margin="11sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/faded_white"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        android:labelFor="@id/user_email"/>

                    <EditText
                        android:id="@+id/user_email"
                        android:layout_width="wrap_content"
                        android:maxWidth="220sp"
                        android:layout_height="48sp"
                        android:layout_marginTop="-12sp"
                        android:text="@string/email"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:background="@null"
                        android:lines="1"
                        android:inputType="textEmailAddress"
                        android:autofillHints="emailAddress"/>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/edit"
                style="?android:borderlessButtonStyle"
                android:onClick="focusEditText"
                android:contentDescription="Edit Email icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="33sp"
            android:layout_marginEnd="33sp"
            android:layout_marginTop="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location"
                    android:layout_margin="11sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@color/faded_white"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        android:labelFor="@id/user_address"/>

                    <EditText
                        android:id="@+id/user_address"
                        android:layout_width="wrap_content"
                        android:maxWidth="220sp"
                        android:layout_height="48sp"
                        android:layout_marginTop="-12sp"
                        android:text="@string/address"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:background="@null"
                        android:lines="1"
                        android:inputType="text"
                        android:autofillHints="postalAddress"/>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/edit_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/edit"
                style="?android:borderlessButtonStyle"
                android:onClick="focusEditText"
                android:contentDescription="Edit Address icon"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>