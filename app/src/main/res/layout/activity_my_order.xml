<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyOrderActivity">

    <TextView
        android:id="@+id/reward_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Order"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="@color/strong_blue"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reward_header"
        android:layout_marginTop="20sp"
        android:layout_marginStart="70sp"
        android:layout_marginEnd="90sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On going"
                android:textSize="16sp"
                android:textColor="@color/faded_blue"
                android:fontFamily="@font/poppins_medium"/>

            <ImageView
                android:id="@+id/ongoing_underscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:src="@drawable/active"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="16sp"
                android:textColor="@color/faded_white"
                android:fontFamily="@font/poppins_medium"/>

            <ImageView
                android:id="@+id/history_underscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:src=""/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/status"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status"
        android:layout_marginTop="30sp"
        android:layout_marginStart="32sp"
        android:layout_marginEnd="32sp">



    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/navigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-89dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/navigator_border"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_icon"
            android:layout_weight="1"
            android:onClick="goToHomePage"
            style="?android:borderlessButtonStyle"
            android:contentDescription="HomeIcon"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reward_icon"
            android:layout_weight="1"
            android:onClick="goToReward"
            style="?android:borderlessButtonStyle"
            android:contentDescription="Rewards Icon"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_order_selected_icon"
            android:layout_weight="1"
            android:onClick="goToMyOrders"
            style="?android:borderlessButtonStyle"
            android:contentDescription="My Order Icon"/>

    </LinearLayout>

</RelativeLayout>